@model (List<AspNetBalanceSheet.Models.Balance>, List<AspNetBalanceSheet.Models.Balance>, decimal, decimal, List<AspNetBalanceSheet.Models.BalanceRecord>)

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th colspan="3" class="text-center bold-text">AKTIVA</th>
                    </tr>
                    <tr>
                        <th class="text-center">Category</th>
                        <th class="text-center">Account</th>
                        <th class="text-center">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var balance in Model.Item1)
                    {
                        <tr>
                            <td>@balance.Category</td>
                            <td>@balance.Account</td>
                            <td>@balance.Amount.ToString("Rp #,##0.00", new System.Globalization.CultureInfo("id-ID"))</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="2" class="text-center"><strong>Total Aktiva</strong></td>
                        <td><strong>@Model.Item3.ToString("Rp #,##0.00", new
                                     System.Globalization.CultureInfo("id-ID"))</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th colspan="3" class="text-center bold-text">PASIVA</th>
                    </tr>
                    <tr>
                        <th class="text-center">Category</th>
                        <th class="text-center">Account</th>
                        <th class="text-center">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var balance in Model.Item2)
                    {
                        <tr>
                            <td>@balance.Category</td>
                            <td>@balance.Account</td>
                            <td>@balance.Amount.ToString("Rp #,##0.00", new System.Globalization.CultureInfo("id-ID"))</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="2" class="text-center"><strong>Total Pasiva</strong></td>
                        <td><strong>@Model.Item4.ToString("Rp #,##0.00", new
                                     System.Globalization.CultureInfo("id-ID"))</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
            <div class="col-md-6">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th colspan="3" class="text-center bold-text">DEBIT</th>
                        </tr>
                        <tr>
                            <th class="text-center">Category</th>
                            <th class="text-center">Account</th>
                            <th class="text-center">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var balance in Model.Item1)
                        {
                            <tr class="table-success">
                                <td>@balance.Category</td>
                                <td>@balance.Account</td>
                                <td>@balance.Amount.ToString("Rp #,##0.00", new System.Globalization.CultureInfo("id-ID"))</td>
                            </tr>
                        }
                    <tr>
                        <td colspan="2" class="text-center"><strong>Total Debit</strong></td>
                        <td><strong>@Model.Item3.ToString("Rp #,##0.00", new
                                     System.Globalization.CultureInfo("id-ID"))</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th colspan="3" class="text-center bold-text">CREDIT</th>
                    </tr>
                    <tr>
                        <th class="text-center">Category</th>
                        <th class="text-center">Account</th>
                        <th class="text-center">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var balance in Model.Item2)
                    {
                        <tr class="table-danger">
                            <td>@balance.Category</td>
                            <td>@balance.Account</td>
                            <td>@balance.Amount.ToString("Rp #,##0.00", new System.Globalization.CultureInfo("id-ID"))</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="2" class="text-center"><strong>Total Credit</strong></td>
                        <td><strong>@Model.Item4.ToString("Rp #,##0.00", new
                                     System.Globalization.CultureInfo("id-ID"))</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
    <div class="col-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>isFlip</th>
                    <th>Flip Amount</th>
                    <th>Transfer From</th>
                    <th>Transfer To</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model.Item5)
                {
                    <tr>
                        <td>@transaction.Date</td>
                        <td>@transaction.IsFlip</td>
                        <td>
                            @if (transaction.FlipAmount == 0)
                                {
                                    @("-")
                                }
                                else
                                {
                                    @transaction.FlipAmount.ToString("Rp #,##0.00", new System.Globalization.CultureInfo("id-ID"))
                                }
                        </td>
                        <td>@transaction.TransferFrom</td>
                        <td>@transaction.TransferTo</td>
                        <td>@transaction.Amount.ToString("Rp #,##0.00", new
                                    System.Globalization.CultureInfo("id-ID"))</td>
                    </tr>
                }
            </tbody>
            </table>
        </div>
    </div>
</div>